<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

<Button
    android:id="@+id/start_fragment_shoping_button"
    style="@style/StartFragmentMenuButtons"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/shopping_button_image"
    android:text="@string/shopping"
    app:layout_constraintBottom_toTopOf="@+id/start_fragment_movies_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/start_fragment_movies_button"
    style="@style/StartFragmentMenuButtons"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:text="@string/movies"
    android:background="@drawable/movies_button_image"
    app:layout_constraintBottom_toTopOf="@+id/start_fragment_notifications_button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/start_fragment_shoping_button" />

<Button
    android:id="@+id/start_fragment_notifications_button"
    style="@style/StartFragmentMenuButtons"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/notifications_button_image"
    android:text="@string/notifications"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/start_fragment_movies_button" />

</androidx.constraintlayout.widget.ConstraintLayout>